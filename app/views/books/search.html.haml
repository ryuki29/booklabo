.search-main
  .container
    .search-result.card
      %h1.card-header
        検索結果
      .card-body.row
        - @books.each do |book|
          .search-item.card.col-md-3.border-0
            = image_tag(book[:image_url],
              class: 'card-img-top')
            .search-item-body.card-body
              %h5.card-title
                = book[:title]
              .card-text
                = book[:authors].join(', ')
      - if @total_items > 20
        = render partial: 'shared/pagination',
          locals: { page: @page,
                    total_items: @total_items,
                    keyword: @keyword,
                    books: @books }
