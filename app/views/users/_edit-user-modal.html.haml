.modal.fade#edit-user-modal{ tabindex: "-1",
  role: "dialog",
  area: { labelledby: "edit-user-modal-title",
  hidden: true } }
  .modal-dialog.modal-dialog-centered{ role: "document" }
    .edit-user.modal-content
      .modal-header
        %h5.modal-title#edit-user-modal-title
          プロフィールを編集
        %button.close{ aria: { label: "Close" },
                      data: { dismiss: "modal" },
                      type: "button" }
          %span{"aria-hidden" => "true"} ×
      .modal-body
        = form_with model: @user do |f|
          .row.mb-2
            .col-4.edit-user-image-container
              = image_tag('default-user-image.jpg',
                          class: "edit-user-image")
              .custom-file
                = f.label(:image,
                class: "edit-user-image-label") do
                  %i.fas.fa-camera.fa-2x
                = f.file_field(:image,
                  class: "custom-file-input")
          .form-group
            = f.label(:name, "名前",
              class: "edit-user-label")
            = f.text_field(:name,
              placeholder: "名前を変更",
              value: @user.name,
              class: "form-control")
            %span.edit-user-count 0/50
          .form-group
            = f.label(:name, "自己紹介",
              class: "edit-user-label")
            = f.text_area(:name,
              value: @user.description,
              rows: 6,
              placeholder: "自己紹介を追加",
              maxlength: 160,
              class: "form-control edit-user-text-area")
            %span.edit-user-count 0/160
          .form-group
            = f.label(:url,
              "ウェブサイト",
              class: "edit-user-label")
            = f.text_field(:name,
              value: @user.url,
              placeholder: "ウェブサイトを追加",
              class: "form-control")
            %span.edit-user-count 0/100
          = f.submit('保存', class: "edit-user-btn") 
