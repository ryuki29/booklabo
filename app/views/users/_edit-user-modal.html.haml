.modal.fade#edit-user-modal{ tabindex: "-1",
  role: "dialog",
  area: { labelledby: "edit-user-modal-title",
  hidden: true } }
  .modal-dialog.modal-dialog-centered{ role: "document" }
    .edit-user.modal-content
      .modal-header
        %h5.modal-title#edit-user-modal-title
          プロフィールを編集
        %button.close{ aria: { label: "Close" },
                      data: { dismiss: "modal" },
                      type: "button" }
          %span{"aria-hidden" => "true"} ×
      .modal-body
        = form_with(model: @user,
                    url: user_path,
                    method: :put,
                    local: true)  do |f|
          .row.mb-2
            .col-4.edit-user-image-container
              - if @user.image.attached?
                = image_tag(@user.image,
                            class: "edit-user-image")
              -else
                = image_tag('default-user-image.jpg',
                            class: "edit-user-image")
              .custom-file
                = f.label(:image,
                class: "edit-user-image-label") do
                  %i.fas.fa-camera.fa-2x
                = f.file_field(:image,
                  class: "custom-file-input")
          .form-group
            = f.label(:name, "名前",
              class: "edit-user-label")
            = f.text_field(:name,
              placeholder: "名前を変更",
              value: @user.name,
              maxlength: 20,
              id: "edit-user-name",
              class: "form-control")
            %span.edit-user-count
              %span#user-name-count
              %span<> /20
          .form-group
            = f.label(:description, "自己紹介",
              class: "edit-user-label")
            = f.text_area(:description,
              value: @user.description,
              rows: 6,
              placeholder: "自己紹介を追加",
              maxlength: 160,
              id: "edit-user-description",
              class: "form-control edit-user-text-area")
            %span.edit-user-count
              %span#user-description-count
              %span<> /160
          .form-group
            = f.label(:url,
              "ウェブサイト",
              class: "edit-user-label")
            = f.text_field(:url,
              value: @user.url,
              maxlength: 100,
              placeholder: "ウェブサイトを追加",
              id: "edit-user-url",
              class: "form-control")
            %span.edit-user-count
              %span#user-url-count
              %span<> /100
          = f.submit('保存', class: "edit-user-btn") 
