%form.post-review
  .row.mb-2
    %label{ for: "date",
            class: 'col-3 post-review-label my-auto' }
      読み終わった日
    .input-group.date.col-5.pl-0#datetimepicker{ data: { target: { input: "nearest" } } }
      %input{ type: 'text',
              name: 'date',
              data: { target: '#datetimepicker' },
              id: 'date-input',
              class: 'form-control datetimepicker-input review-date' }
      .input-group-append{ data: { target: '#datetimepicker',
                            toggle: "datetimepicker" } }
        .input-group-text.border-0#calender
          %i.fa.fa-calendar
    .col-4.my-auto.post-review-label
      %input.date-check#date-check{ type: "checkbox" }
      読了日を指定しない
  .row.mb-1
    %label{ for: 'text',
            class: 'col-3 post-review-label' }
      感想・レビュー
    %textarea{ type: 'text',
                name: 'text',
                id: 'review-text',
                class: 'review-text col form-control mr-3' }
  .row.mb-1
    .word-count-text.ml-auto.mr-3
      %span.word-count#word-count<>0
      ／255文字
  .row.mb-2
    .col-3
    %input{ type: 'hidden',
            name: 'rating',
            value: 0,
            id: 'book-rating' }
    .book-rating.pl-0.pr-3.my-auto
      %i.fas.fa-star.fa-lg{ data: { rating: 1 } }
      %i.fas.fa-star.fa-lg{ data: { rating: 2 } }
      %i.fas.fa-star.fa-lg{ data: { rating: 3 } }
      %i.fas.fa-star.fa-lg{ data: { rating: 4 } }
      %i.fas.fa-star.fa-lg{ data: { rating: 5 } }
    %span.rating-reset#rating-reset
      評価なし
  .row
    .col-3
    .col-9.d-flex.pl-0
      .tweet-btn.my-o
        %i.fab.fa-twitter
      %button{ id: 'review-submit',
                class: 'review-submit ml-auto my-0' }
        登録する
